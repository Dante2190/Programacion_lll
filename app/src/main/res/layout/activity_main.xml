<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <TabHost
        android:id="@+id/tbConversor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:orientation="horizontal" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/tabPropio"
                    android:layout_width="match_parent"
                    android:layout_height="667dp"
                    android:orientation="vertical">


                    <EditText
                        android:id="@+id/edtCantidad01"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:ems="10"

                        android:hint="@string/ingrese_el_monto"
                        android:inputType="textPersonName" />

                    <EditText
                        android:id="@+id/edtCantidad02"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="80dp"
                        android:ems="10"

                        android:hint="@string/ingrese_el_monto"
                        android:inputType="textPersonName" />

                    <EditText
                        android:id="@+id/edtCantidad03"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="140dp"
                        android:ems="10"

                        android:hint="@string/ingrese_el_monto"
                        android:inputType="textPersonName" />

                    <Button
                        android:id="@+id/idconvertir"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"


                        android:layout_marginTop="220dp"


                        android:text="@string/convertir" />

                    <TextView
                        android:id="@+id/txtRespuesta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp"
                        android:layout_marginTop="191dp"
                        android:text="@string/respuesta"
                        android:textSize="20dp" />




                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/tabArea"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp"
                        android:layout_marginTop="30dp"
                        android:textSize="20dp"
                        android:textColor="#000000"
                        android:text="@string/conversor_de_area" />

                    <TextView
                        android:id="@+id/textVie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="90dp"
                        android:textSize="18dp"
                        android:textColor="#000000"
                        android:text="@string/cantidad" />

                    <EditText
                        android:id="@+id/edtCantidad2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:layout_marginLeft="120dp"
                        android:layout_marginTop="70dp"
                        android:hint="@string/ingrese_el_monto" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="125dp"
                        android:textSize="18dp"
                        android:textColor="#000000"
                        android:text="@string/de" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="160dp"
                        android:textSize="18dp"
                        android:textColor="#000000"
                        android:text="A" />

                    <Spinner
                        android:id="@+id/cboArea"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="125dp"
                        android:entries="@array/area" />

                    <Spinner
                        android:id="@+id/cboArea2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="160dp"
                        android:entries="@array/area" />

                    <Button
                        android:id="@+id/idconvertir2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="220dp"
                        android:onClick="area"
                        android:text="@string/convertir"
                        />

                    <TextView
                        android:id="@+id/txtRespuesta2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/respuesta"
                        android:layout_marginLeft="150dp"
                        android:layout_marginTop="220dp"
                        android:textColor="#000000"/>


                </RelativeLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>

</RelativeLayout>