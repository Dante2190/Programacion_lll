<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#7828FD">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/conversiones"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:layout_marginLeft="70dp"
        android:fontFamily="sans-serif"
        android:layout_marginTop="30dp"
        />

    <Button
        android:id="@+id/btnMonedas"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="90dp"
        android:text="@string/conversor_de_monedas"
        android:fontFamily="sans-serif"
        android:background="@drawable/custom_button"
        android:textColor="#000000"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:visibility="visible" />

    <Button
        android:id="@+id/btnMasa"
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="170dp"
        android:text="@string/conversor_de_masa"
        android:fontFamily="sans-serif"
        android:background="@drawable/custom_button"
        android:textColor="#000000"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <Button
        android:id="@+id/btnVolumen"
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:fontFamily="sans-serif"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="250dp"
        android:text="@string/conversor_de_volumen"
        android:background="@drawable/custom_button"
        android:textColor="#000000"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <Button
        android:id="@+id/btnLongitud"
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="330dp"
        android:fontFamily="sans-serif"
        android:text="@string/conversor_de_longitud"
        android:background="@drawable/custom_button"
        android:textColor="#000000"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <Button
        android:id="@+id/btnAlmacenamiento"
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="410dp"
        android:fontFamily="sans-serif"
        android:text="@string/conversor_de_almacenamiento"
        android:background="@drawable/custom_button"
        android:textColor="#000000"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <Button
        android:id="@+id/btnTiempo"
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="490dp"
        android:text="@string/conversor_de_tiempo"
        android:textColor="#000000"
        android:background="@drawable/custom_button"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <Button
        android:id="@+id/btnTransDatos"
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="570dp"
        android:fontFamily="sans-serif"
        android:text="@string/conversor_de_transferencias_de_datos"
        android:background="@drawable/custom_button"
        android:textColor="#000000"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

</RelativeLayout>